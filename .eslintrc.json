{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint"
  ],
  "plugins": [
    "node"
  ],
  "rules": {
    "arrow-parens": ["error", "always"],
    "arrow-body-style": ["error", "always"],
    "indent": ["error", 2, {"SwitchCase": 1}],
    "arrow-spacing":[
      "error",
      { "before": false, "after": false }
    ],
    "node/exports-style": [
      "error",
      "module.exports"
    ],
    "node/no-unsupported-features": [
      "error",
      {
        "version": 8
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2018
  }
}
