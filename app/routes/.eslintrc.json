{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "plugins": ["node"],
  "rules": {
    "node/no-unsupported-features": [
      "error", {
        "version": 8
      }
    ],
    "node/exports-style": ["error", "module.exports"]
  },
  "parserOptions": {
    "ecmaVersion": 2017
  }
}
